{
  "name": "angular-starter",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:lan": "ng serve --host 0.0.0.0",
    "start:local": "ng serve --host localhost",
    "start:tunnel": "ng serve --host 0.0.0.0 --disable-host-check",
    "build": "ng build",
    "build:prod": "ng build --configuration=production --aot --optimization --build-optimizer",
    "build:netlify": "ng build --configuration=production --base-href=/",
    "build:analyze": "ng build --configuration=production --stats-json && npx webpack-bundle-analyzer dist/project/stats.json",
    "dev": "ng serve",
    "serve:prod": "npm run build:prod && http-server dist/demo -p 4200 -a 0.0.0.0 --cors",
    "tunnel": "lt --port 4200",
    "tunnel:serveo": "ssh -R 80:localhost:4200 serveo.net",
    "tunnel:custom": "lt --port 4200 --subdomain voyalaeropuerto",
    "preview": "npm run build:prod && npx http-server dist/demo -p 8080",
    "deploy": "npm run build:prod && netlify deploy --prod --dir dist/project",
    "deploy:manual": "npm run build:prod && echo 'Build completed. Ready for manual deploy from dist/project/'",
    "deploy:site": "npm run build:prod && netlify deploy --prod --dir dist/project --site",
    "deploy:auto": "bash deploy.sh",
    "deploy:windows": "deploy.bat",
    "test:build": "ng build --configuration=production --dry-run",
    "lint": "ng lint",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss}\"",
    "check:dependencies": "npm audit && npm outdated",
    "fix:deps": "npm install --legacy-peer-deps",
    "clean:install": "rm -rf node_modules package-lock.json && npm install --legacy-peer-deps",
    "clean:install:windows": "rmdir /s /q node_modules && del package-lock.json && npm install --legacy-peer-deps"
  },
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@solana/wallet-standard": "^1.1.4",
    "@solana/wallet-standard-features": "^1.3.0",
    "@stripe/stripe-js": "^7.3.1",
    "@supabase/supabase-js": "^2.50.0",
    "firebase": "^11.9.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.5.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.0",
    "@angular/cli": "^18.2.0",
    "@angular/compiler-cli": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.5.0"
  }
}
